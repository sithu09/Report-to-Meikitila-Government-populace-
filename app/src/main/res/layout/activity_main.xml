<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/meiktila"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/justic"
            app:civ_border_color="#455"
            app:civ_border_width="4dp"
            app:civ_shadow="true"
            android:layout_gravity="center"
            app:civ_shadow_radius="10"
            android:layout_marginTop="20dp"
            app:civ_shadow_color="#4A84C3"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="25dp"
            android:layout_marginTop="0dp"
            android:layout_gravity="center"
            android:text="တိုင်မယ်"
            android:textColor="#000"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/police"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            android:text="ရဲစခန်း"
            android:textColor="#000"
            android:background="@drawable/loginbutton"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/municipal"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            android:text="စည်ပင်"
            android:textColor="#000"
            android:background="@drawable/loginbutton"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/epc"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            android:text="EPC"
            android:textColor="#000"
            android:background="@drawable/loginbutton"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/hospital"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            android:text="ပြည်သူ့ဆေးရုံ"
            android:textColor="#000"
            android:background="@drawable/loginbutton"
            android:textSize="20dp"/>

    </LinearLayout>

</LinearLayout>