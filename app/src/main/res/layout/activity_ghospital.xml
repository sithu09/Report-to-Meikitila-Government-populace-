<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GHospital">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#3498db"
            android:paddingTop="40px"
            android:text="ပြည်သူ့ဆေးရုံ"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="78dp"
            tools:layout_editor_absoluteY="55dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25px"
        android:layout_marginBottom="35px"
        android:orientation="vertical">


        <Button
            android:id="@+id/hnews"
            android:layout_width="303dp"
            android:layout_height="126dp"
            android:layout_marginLeft="120px"
            android:layout_marginTop="100px"
            android:background="@drawable/broker"
            android:text="ပြည်သူ့ဆေးရုံ သတင်း"
            android:textSize="20dp"
            />


        <Button
            android:id="@+id/hreport"
            android:layout_width="303dp"
            android:layout_height="126dp"
            android:layout_marginLeft="120px"
            android:layout_marginTop="100px"
            android:background="@drawable/broker"
            android:text="တိုင်စာပို့မည်"
            android:textSize="20dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:text="ကျန်းမာရေးစောင့်ရှောက်မှု ခံယူခြင်းသည် ပြည်သူ့များ၏
အခြေခံရပိုင့်ခွင့်ဖြစ်သည်။
ကျန်းမာရေးစောင့်ရှောက်မှု  ခံယူရန် ပြည်သူ့ဆေးရုံသို့ ဆက်သွယ်နိုင်သည်။
"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35px"
        >




    </LinearLayout>

